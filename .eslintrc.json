{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": "./dist/**/*",
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts"]
            }
        }
    },
    "rules": {
        "max-len": "off",
        "linebreak-style": "off",
        "no-restricted-syntax": "off",
        "no-else-return": "off",
        "no-await-in-loop": "off",
        "no-promise-executor-return": "off",
        "block-spacing": "off",
        "no-console": "off",
        "indent": "off",
        "import/prefer-default-export": "off",
        "object-curly-spacing": "off",
        "no-use-before-define": "off",
        "no-shadow": "off",
        "no-param-reassign": "off",
        "no-unused-vars": "off",
        "no-useless-return": "warn",
        "@typescript-eslint/typedef": ["warn", {"arrayDestructuring": false, "arrowParameter": true, "memberVariableDeclaration": true, "objectDestructuring": false, "parameter": true, "propertyDeclaration": true, "variableDeclaration": true, "variableDeclarationIgnoreFunction": true}],
        "@typescript-eslint/no-unused-vars": "warn",
        "@typescript-eslint/object-curly-spacing": ["error", "never"],
        "@typescript-eslint/no-use-before-define": ["error", "nofunc"],
        "@typescript-eslint/indent": ["error", 4, {"SwitchCase": 1}],
        "no-multi-spaces": ["error", {"ignoreEOLComments": true}],
        "import/order": ["error", {"groups": ["builtin", "external", "internal", "parent", "sibling", "index", "object", "type"]}]
    }
}